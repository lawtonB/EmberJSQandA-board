{{#if addNewAnswer}}
  <h3>New Answer</h3>
    <div>
      <form>

        <div class='form-group'>
          <label for='content'>Content</label>
          {{input value=content id='content'}}
        </div>

        <div class='form-group'>
          <label for='author'>author</label>
          {{input value=author id='author'}}
        </div>

        <button {{action 'saveAnswer'}}>Save</button>
      </form>
    </div>
  {{else}}
    <button {{action 'answerFormShow'}}>New Answer</button>
{{/if}}
