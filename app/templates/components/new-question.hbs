{{#if addNewQuestion}}
  <h3>New Question</h3>
    <div>
      <form>
        <div class='form-group'>
          <label for='content'>Content</label>
          {{input value=content id='content'}}
        </div>

        <div class='form-group'>
          <label for='author'>Author</label>
          {{input value=author id='author'}}
        </div>

        <div class='form-group'>
          <label for='notes'>Notes</label>
          {{input value=notes id='notes'}}
        </div>

        <button {{action 'saveQuestion' question}}>Save</button>
      </form>
    </div>
  {{else}}
    <button {{action 'questionFormShow'}}>New Question</button>
{{/if}}
